<% include ../layouts/headerAdmin.ejs %>

<div class="m-4">
    <button type="button" class="btn btn-info" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample"
        aria-expanded="false" aria-controls="collapseWidthExample">Agregar alumno</button>
    <br>
    <br>
    <div>
        <div class="collapse collapse-horizontal" id="collapseWidthExample">
            <div class="card">
                <div class="card-body">
                    <form action="/alumnos/create" method="POST">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Nombre</span>
                            <input type="text" class="form-control" name="nombre">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Apellidos</span>
                            <input type="text" class="form-control" name="apellidos">
                        </div>
                        <select class="form-select" aria-label="Default select example" name="id_grupo">
                            <option selected>Selecciona el grupo del alumno</option>
                            <% dataGrupos.forEach(function(grupos){ %>
                                <option value="<%= grupos._id %>"><%= grupos.nombre_grupo %></option>
                            <% }); %>
                        </select>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Grupo</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(alumno){ %>
            <tr>
                <td><%= alumno.nombre %></td>
                <td><%= alumno.apellidos %></td>
                <td><%= alumno.id_grupo.nombre_grupo %></td>
               
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal"
                        data-bs-target="#exampleModal-<%= alumno._id %>">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-pencil" viewBox="0 0 16 16">
                            <path
                                d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                        </svg>
                    </button>
                    <a href="alumnos/delete/<%= alumno._id %>?_method=DELETE" class="btn btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-trash" viewBox="0 0 16 16">
                            <path
                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd"
                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </a>
                </td>
            </tr>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal-<%= alumno._id %>" tabindex="-1"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"><%= alumno.name %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        
                            <div class="modal-body">
                                <form action="alumnos/edit/<%= alumno._id %>?_method=PUT" method="POST">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">name</span>
                                        <input type="text" class="form-control" value="<%= alumno.nombre %>" name="nombre">
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">email</span>
                                        <input type="text" class="form-control" value="<%= alumno.apellidos %>" name="apellidos">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                                
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                
                            </div>
                       
                    </div>
                </div>
            </div>


            <% }); %>

        </tbody>
    </table>
</div>


<% include ../layouts/footer.ejs %>